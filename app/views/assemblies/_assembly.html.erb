<div id="<%= dom_id assembly %>">
  <p>
    <strong>Assembly reg:</strong>
    <%= assembly.assembly_reg %>
  </p>

  <strong>
     Parts:
  </strong>

  <%if assembly.parts.any?%>
    <ul>
      <%assembly.parts.each do |part| %>
        <div>
           <li><%=part.name%></li>
        </div>
      <% end %>
    </ul>
    <% else %>
        <p>This assembly has no parts.</p>
    <%end%>

</div>
